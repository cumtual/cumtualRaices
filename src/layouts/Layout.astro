---
interface Props {
  title: string;
  pageTitle: string;
  description: string;
}
const { title, pageTitle, description } = Astro.props;
import { ClientRouter } from "astro:transitions";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Proyecto de Cumtual" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Bienes Raices - {title}</title>
    <link rel="stylesheet" href="/src/styles/globals.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <ClientRouter />
  </head>
  <body class="bg-[#FFF]/80 overflow-x-hidden">
    <script>
      import { myAosInit } from "@utils/aos";
      myAosInit();
      document.addEventListener("astro:after-swap", myAosInit);
    </script>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
